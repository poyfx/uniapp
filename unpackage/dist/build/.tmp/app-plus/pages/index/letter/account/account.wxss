
.mt {
	padding: 15px;
}
.account {
	width: 100%;
}
.account_date {
	width: 100%;
	text-align: center;
	margin-bottom: 10px;
}
.account_date text {
	background-color: #CBCBCB;
	padding: 4px 15px;
	color: #fff;
	border-radius: 0.9em;
	font-size: 0.6rem;
}
.account_content {
	width: 100%;
	padding-top: 10px;
	margin-bottom: 10px;
}
.account_content_title {
	width: 100%;
	padding: 0 10px;
	margin-bottom: 10px;
	/* text-align: center; */
}
.account_content_title text {
	font-size: 1.2em;
	font-weight: bold;
	color: #424242;
}
.account_content_img {
	width: 100%;
	text-align: center;
	margin-bottom: 10px;
}
.account_content_img image {
	width: 3.5rem;
	height: 3.5rem;
}
.account_content_info {
	width: 100%;
	padding: 0 10px;
	margin-bottom: 10px;
	/* text-align: center; */
}
.account_content_info text {
	color: #757575;
	font-size: 0.8rem;
}
.account_content_confirm {
	width: 100%;
	border-top: 1px solid #e5e5e5;
	padding: 10px 10px 10px 0;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	    -ms-flex-pack: end;
	        justify-content: flex-end;
}
.account_content_confirm text {
	font-size: 0.6rem;
	color: #9E9E9E;
}

