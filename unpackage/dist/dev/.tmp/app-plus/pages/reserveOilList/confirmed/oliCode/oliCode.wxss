	width: 200px;
	height: 200px;
	margin: 0 auto;
}
.oilcode_foot {
	width: 15rem;
	height: 4.2rem;
	margin: 0 auto;
	text-align: center;
	position: absolute;
	top: 23rem;
	z-index: 2;
